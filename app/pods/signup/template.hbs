<div class="account col-xs-10 col-sm-5 center-block">
  <form class="spacing-bottom6">
    <div {{bind-attr class=":form-group :has-feedback errors.email.length:has-error::has-success"}}>
      <label class="sr-only" for="email">{{t 'label.email'}}</label>
      <input class="form-control large" type="email" id="email" name="email" placeholder="Email">
      <span {{bind-attr class=":form-control-feedback errors.email.length:show::hide"}}>
        <i {{bind-attr class=":fa errors.email.length:fa-close::fa-check"}}></i>
      </span>
    </div>
    <div {{bind-attr class=":form-group :has-feedback errors.domain.length:has-error::has-success"}}>
      <label class="sr-only" for="domain">{{t 'label.domain'}}</label>
      <input class="form-control large" type="url" id="domain" name="domain" placeholder="Domain">
      <span {{bind-attr class=":form-control-feedback errors.domain.length:show::hide"}}>
        <i {{bind-attr class=":fa errors.domain.length:fa-close::fa-check"}}></i>
      </span>
    </div>
    <div {{bind-attr class=":form-group :has-feedback errors.password.length:has-error::has-success"}}>
      <label class="sr-only" for="password">{{t 'label.domain'}}</label>
      <input class="form-control large" type="password" id="password" name="password" placeholder="Password">
      <span {{bind-attr class=":form-control-feedback errors.password.length:show::hide"}}>
        <i {{bind-attr class=":fa errors.password.length:fa-close::fa-check"}}></i>
      </span>
    </div>
    <div class="checkbox text-center text-small">
      <label>
        <input type="checkbox" id="terms" name="terms">
        {{t "signUp.label.terms"}} {{url-prefix-link "bloo.ie/terms" "terms"}}
      </label>
    </div>
    <div>
      <input type="hidden" name="client_id" value="escaped_query.client_id">
      <input type="hidden" name="redirect_uri" value="escaped_query.redirect_uri">
      <input type="hidden" name="scope" value="escaped_query.scope">
      <input type="hidden" name="responseType" value="escaped_query.response_type">
      <input type="hidden" name="referer" value="referer">
    </div>
    <div class="spacing-top3">
      <button class="btn pop blue large block spacing-bottom2" {{action 'signUp'}}><span>{{t 'button.signUp'}}</span></button>
    </div>
  </form>
  <div class="text-center">
    <a class="btn hollow" href="#">{{t 'button.signIn'}}</a>
  </div>
</div>
