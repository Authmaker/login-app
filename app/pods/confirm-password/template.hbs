<div class="account col-xs-10 col-sm-8 center-block">
  <div class="frame">
    {{#if error}}
    <div class="pad2 text-center">
      <form class="account-form" role="form" action="/user/password" method="post">
        <h4>{{t 'confirmPassword.error.title'}}!</h4>
        <p>{{message}}</p>
      {{else}}
      {{#unless thanks}}
        <div class="pad2 text-center">
          <h4>{{t 'confirmPassword.change.title'}}!</h4>
          <p>{{t 'confirmPassword.change.message'}}</p>
          <div class="spacing-top2">
            <div class="row">
              <div class="col-xs-6">
                <label class="sr-only" for="password">{{t 'label.password'}}</label>
                <input class="form-control" id="password" name="password" type="password" placeholder="New Password"/>
              </div>
              <div class="col-xs-6">
                <label class="sr-only" for="passwordConfirm">{{t 'label.confirm.password'}}</label>
                <input class="form-control" id="passwordConfirm" name="passwordConfirm" type="password" placeholder="Confirm Password"/>
              </div>
            </div>
          </div>
          <input type="hidden" name="userId" value="userId" />
          <input type="hidden" name="resetCode" value="code" />
          <input type="hidden" name="client_id" value="escaped_query.client_id">
          <input type="hidden" name="redirect_uri" value="escaped_query.redirect_uri">
          <input type="hidden" name="scope" value="escaped_query.scope">
          {{#if error}}
            <p id="autherror">{{error}}</p>
          {{/if}}
        </div>
      </form>
      <div class="frame-footer">
        <input {{#if app_settings.enable_GA}}onClick="_gaq.push(['_trackEvent', 'user', 'resetPassword', 'localauth.bloo.ie/reset_password',, false]);"{{/if}} type="submit" value="Go" class="btn pop blue block" />
      </div>
      {{else}}
      <div class="pad2 text-center">
        <h4>{{t 'confirmPassword.success.title'}}!</h4>
        <p>{{t 'confirmPassword.success.message'}}</p>
      </div>
      <div class="frame-footer">
        <a href="success_login" class="btn pop blue block">{{t 'button.signIn'}}</a>
      </div>
      {{/unless}}
    {{/if}}
  </div>
</div>
